{
  "name": "parse-sitemap",
  "version": "1.1.1",
  "private": true,
  "description": "Get URLs from sitemap.xml",
  "keywords": [
    "sitemap",
    "github-actions",
    "sitemap-parse",
    "lighthouse",
    "lighthouse-ci"
  ],
  "repository": "github:cobraz/parse-sitemap",
  "license": "Apache-2.0",
  "author": "Simen A. W. Olsen <so@bjerk.io>",
  "main": "build/main.js",
  "scripts": {
    "dev": "ts-node src/main.ts",
    "build": "ncc build --source-map src/main.ts",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "generate": "graphql-codegen --config codegen.yml",
    "lint": "eslint src/**/*.ts",
    "test": "jest --passWithNoTests",
    "all": "yarn  run build && yarn  run format && yarn run lint && yarn run test",
    "prepare": "husky install .github/husky"
  },
  "lint-staged": {
    "src/**/*.{yaml,yml}": "prettier --write",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "{.eslintrc,.releaserc.json,.tsconfig.json}": "prettier --write",
    "*.md": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "sitemapper": "^3.1.12"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "~26.0.23",
    "@types/node": "~14",
    "@typescript-eslint/eslint-plugin": "~4.23.0",
    "@typescript-eslint/parser": "~4.22.0",
    "@vercel/ncc": "^0.28.5",
    "dedent": "^0.7.0",
    "dotenv": "^9.0.2",
    "eslint": "~7.26.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "~24.3.6",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "~26.6.3",
    "lint-staged": "^11.0.0",
    "nock": "^13.0.11",
    "prettier": "^2.3.0",
    "rimraf": "~3.0.2",
    "runtypes": "^6.3.0",
    "ts-jest": "~26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.5"
  }
}